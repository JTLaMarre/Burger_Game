<div class="row">
  <div class="col-12 text-center">
  <h1>Eat Burgers!</h1>
    <img src="../assets/images/burger.png" alt="burger image" id="burgerIcon">
  </div>
</div>
<div class="row">
  <div class="col-6">
    <h2>Burgers that are not Devoured!</h2>

    <ul class="list-group-item list-group-item-success ">
      {{#each Burgers}}
      {{#unless Devoured}}
      <li>
        {{name}}
        <button class="change-Devour  btn btn-danger" data-id="{{id}}" data-newEat="{{Devour}}">Devour!</button>
      </li>
      <br>
      {{/unless}}
      {{/each}}
    </ul>
  </div>
  <div class="col-6">
    <h2>Burgers that are Devoured!</h2>

    <ul>
      {{#each Burgers}}
      {{#if Devoured}}
      <li class="list-group-item list-group-item-secondary">
        {{name}} mmm delicious

      </li>
      <br> 
      {{/if}}
      {{/each}}
    </ul>
  </div>
</div>
<div class="row">
  <div class="col-12 text-center">
    <h2>Add a Burger</h2>
    <form class="create-form">

      <div class="form-group">
        <label for="ca">Burger Name:</label>
        <input type="text" id="bg" name="name">
      </div>
      <button type="submit" class=" btn btn-primary">Add Burger</button>
    </form>
  </div>
</div>